@model About
@{
    ViewData["Title"] = "About";
}

<div class="blog-single gray-bg">
    <div class="container">
        <div class="row align-items-start">
            <div class="col-lg-12">

                <article class="article">
                    <div class="article-title">
                        <h2>@Model.Title</h2>
                    </div>
                    <div class="article-content">
                        @Html.Raw(Model.Text)
                    </div>
                </article>

            </div>
        </div>
    </div>
</div>

