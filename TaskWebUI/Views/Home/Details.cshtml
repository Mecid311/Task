@model DetailsViewModel
@{
    ViewData["Title"] = "Details";
}


<div class="blog-single gray-bg">
    <div class="container">
        <div class="row align-items-start">
            <div class="col-lg-12">

                <article class="article">
                    <div class="article-img">
                        <div class="card-when-1">
                            <div class="card-date">
                                <div class="date-day">@Model.News.CreatedDate.ToString("dd")&nbsp;</div>
                                <div class="date-month">@Model.News.CreatedDate.ToString("MMM")</div>
                                <div class="date-year">@Model.News.CreatedDate.ToString("yyyy")</div>
                            </div>
                            <div class="card-time">@Model.News.CreatedDate.ToString("HH:mm")</div>

                        </div>
                        <div class="card-when-2">
                            <div class="card-like card-container ">
                                <samp class="like"><i class="fas fa-thumbs-up"></i>@Model.News.Likes.Count()</samp>
                            </div>
                            <div class="card-dislike card-container">
                                <samp class="like"><i class="fas fa-thumbs-down"></i>@Model.News.DisLikes.Count()</samp>
                            </div>
                            <div class="card-views card-container">
                                <samp class="like"><i class="fas fa-eye"></i>9</samp>
                            </div>
                        </div>
                        <img style="width:800px; height:500px;" src="~/uploads/@Model.News.Image" title="" alt="">

                    </div>
                    <div class="opo">
                        <div class="card-like card-container ">
                            <samp class="like"><i class="fas fa-thumbs-up"></i>10</samp>
                        </div>
                        <div class="card-dislike card-container">
                            <samp class="like"><i class="fas fa-thumbs-down"></i>9</samp>
                        </div>
                        <div class="card-views card-container">
                            <samp class="like"><i class="fas fa-eye"></i>9</samp>
                        </div>
                    </div>
                    <div class="article-title">
                        <h2>@Html.Raw(Model.News.Title)</h2>
                    </div>
                    <div class="article-content">
                        @Html.Raw(Model.News.Text)
                        </div>
                </article>

            </div>
        </div>
    </div>
</div>
