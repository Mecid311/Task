@model TaskWebUI.Models.FormModel.LoginFormModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
    string message = TempData["message"] as string;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Admin/assets/css/login.css">
    <link rel="shortcut icon" type="image/png" href="~/assets/images/header/favicon.ico" />
</head>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            @if (!string.IsNullOrWhiteSpace(message))
            {
                <div class="row">
                    <div class="col-sm-12">
                        <div class="alert alert-danger">
                            @message
                        </div>
                    </div>
                </div>
            }
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="~/Admin/assets/img/1403.jpg" alt="login" class="login-card-img">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <a asp-area="" asp-controller="home" asp-action="index">
                                <h1>Məlumat.az</h1>
                            </a>


                            <p class="login-card-description">Sign into your account</p>
                            <form asp-action="Login" method="post">
                                <div class="form-group">
                                    <label for="email" class="sr-only">Email</label>
                                    <input type="email" asp-for="Username" id="email" class="form-control" placeholder="Email address">
                                </div>
                                <div class="form-group mb-4">
                                    <label for="password" class="sr-only">Password</label>
                                    <input type="password" asp-for="Password" id="password" placeholder="Password" class="form-control">
                                </div>
                                <button class="btn btn-block login-btn mb-4" type="submit">Login</button>
                                <div>
                                    <a asp-action="ForgotPassword" style="cursor:pointer; text-decoration:none; color:black;">Forgot Password?</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>