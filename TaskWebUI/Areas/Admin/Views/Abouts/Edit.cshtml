@model TaskWebUI.Models.Entity.About

@{
    ViewData["Title"] = "Edit";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div style="">
                    <h4>About</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit" method="post" class="adminform">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Text" class="control-label"></label>
                                    <textarea asp-for="Text" rows="7" class="form-control" ></textarea>
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-default adminform" style="margin-bottom:30px">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{


    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>

        ClassicEditor
            .create(document.querySelector('#Text'))
            .catch(error => {
                console.error(error);
            });

    </script>
}




@section css{

    <style>
        .ck-editor__editable {
            min-height: 300px !important;
        }
    </style>
}
