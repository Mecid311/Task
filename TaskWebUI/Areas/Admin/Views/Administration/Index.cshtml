@model IEnumerable<MRole>
@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
    {
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div style="">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Id)
                                        </th>

                                        <th class="operate-cell">
                                            <a asp-action="Createrole" class=" btn btn-sm btn-success"><i class="fa fa-plus"></i></a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
                                            </td>

                                            <td class="operate-cell">
                                                <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                    <i class="fa fa-pencil"></i>
                                                </a> 
                                              
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div style="">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="operate-cell">
                                    <a asp-action="Createrole" style="color: blue;border: 1px solid #9762da;" class=" btn btn-sm btn-success"><i style=" " class="fa fa-plus"></i>Create Role</a>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

}
